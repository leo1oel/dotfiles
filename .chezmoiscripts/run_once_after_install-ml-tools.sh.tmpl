# wandb (via uv tool)
if ! command -v wandb >/dev/null 2>&1; then
    echo "üì¶ Installing wandb..."
    uv tool install wandb
else
    echo "‚úÖ wandb is already installed"
fi

# Ensure Node.js is installed (required for npm packages)
if ! command -v node >/dev/null 2>&1; then
    echo "üì¶ Installing Node.js..."
    brew install node
fi

# Claude Code (via npm)
if ! command -v claude >/dev/null 2>&1; then
    echo "üì¶ Installing Claude Code..."
    npm install -g @anthropic-ai/claude-code
else
    echo "‚úÖ Claude Code is already installed"
fi

# OpenAI Codex (via npm)
if ! command -v codex >/dev/null 2>&1; then
    echo "üì¶ Installing OpenAI Codex..."
    npm install -g @openai/codex
else
    echo "‚úÖ OpenAI Codex is already installed"
fi

echo ""
echo "üîê Authentication Setup"
echo "======================="
echo "Run these commands to authenticate:"
echo "  gh auth login                             # GitHub"
echo "  hf auth login                             # Hugging Face"
echo "  wandb login                               # Weights & Biases"
echo ""
echo "Set environment variables for API access:"
echo "  export ANTHROPIC_API_KEY='your-key'      # Anthropic CLI"
echo "  export OPENAI_API_KEY='your-key'         # OpenAI CLI"
echo ""

{{ end -}}
