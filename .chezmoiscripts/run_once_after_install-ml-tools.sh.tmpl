    echo "üì¶ Installing Anthropic CLI..."
    uv tool install anthropic-cli
    echo "‚úÖ Anthropic CLI installed"
else
    echo "‚úÖ Anthropic CLI is already installed"
fi

#################
# OpenAI CLI
#################
if ! command -v openai >/dev/null 2>&1; then
    echo "üì¶ Installing OpenAI CLI..."
    uv tool install openai-cli
    echo "‚úÖ OpenAI CLI installed"
else
    echo "‚úÖ OpenAI CLI is already installed"
fi

#################
# Authentication Instructions
#################
echo ""
echo "üîê Authentication Setup"
echo "======================="
echo "Run these commands to authenticate:"
echo "  gh auth login                             # GitHub"
echo "  hf auth login                             # Hugging Face"
echo "  wandb login                               # Weights & Biases"
echo ""
echo "Set environment variables for API access:"
echo "  export ANTHROPIC_API_KEY='your-key'      # Anthropic CLI"
echo "  export OPENAI_API_KEY='your-key'         # OpenAI CLI"
echo ""

