#!/bin/bash

set -e

{{ if eq .chezmoi.os "linux" -}}
#################
# AI & ML CLI Tools for Ubuntu
#################

echo "ü§ñ Installing AI and ML CLI tools..."

#################
# GitHub CLI
#################
if ! command -v gh >/dev/null 2>&1; then
    echo "üì¶ Installing GitHub CLI..."
    # Add GitHub CLI repository
    type -p curl >/dev/null || sudo apt install curl -y
    curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg
    sudo chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null
    sudo apt update
    sudo apt install gh -y
    echo "‚úÖ GitHub CLI installed"
else
    echo "‚úÖ GitHub CLI is already installed"
fi

#################
# Hugging Face CLI (via uv tool)
#################
if ! command -v hf >/dev/null 2>&1; then
    echo "üì¶ Installing Hugging Face CLI..."
    uv tool install huggingface-hub
    echo "‚úÖ Hugging Face CLI installed"
else
    echo "‚úÖ Hugging Face CLI is already installed"
fi

#################
# wandb (via uv tool)
#################
if ! command -v wandb >/dev/null 2>&1; then
    echo "üì¶ Installing wandb..."
    uv tool install wandb
    echo "‚úÖ wandb installed"
else
    echo "‚úÖ wandb is already installed"
fi

#################
# Ensure Node.js is installed (required for npm packages)
#################
if ! command -v node >/dev/null 2>&1; then
    # First, install fnm if not present
    if ! command -v fnm >/dev/null 2>&1; then
        echo "üì¶ Installing fnm (Fast Node Manager)..."
        curl -fsSL https://fnm.vercel.app/install | bash -s -- --skip-shell
        # Add fnm to PATH for this session
        export PATH="$HOME/.local/share/fnm:$PATH"
        eval "$(fnm env --use-on-cd)"
    fi

    # Now install Node.js via fnm
    if command -v fnm >/dev/null 2>&1; then
        echo "üì¶ Installing Node.js LTS via fnm..."
        fnm install --lts
        fnm use lts-latest
        # Ensure node is in PATH
        eval "$(fnm env)"
        echo "‚úÖ Node.js installed via fnm"
    else
        echo "‚ö†Ô∏è  fnm installation failed. Installing Node.js via apt..."
        sudo apt install -y nodejs npm
    fi
fi

#################
# Claude Code (via npm)
#################
if ! command -v claude >/dev/null 2>&1; then
    echo "üì¶ Installing Claude Code..."
    npm install -g @anthropic-ai/claude-code
    echo "‚úÖ Claude Code installed"
else
    echo "‚úÖ Claude Code is already installed"
fi

#################
# OpenAI Codex (via npm)
#################
if ! command -v codex >/dev/null 2>&1; then
    echo "üì¶ Installing OpenAI Codex..."
    npm install -g @openai/codex
    echo "‚úÖ OpenAI Codex installed"
else
    echo "‚úÖ OpenAI Codex is already installed"
fi

#################
# Authentication Instructions
#################
echo ""
echo "üîê Authentication Setup"
echo "======================="
echo "Run these commands to authenticate:"
echo "  gh auth login                             # GitHub"
echo "  hf auth login                             # Hugging Face"
echo "  wandb login                               # Weights & Biases"
echo ""
echo "Set environment variables for AI tools:"
echo "  export ANTHROPIC_API_KEY='your-key'      # Claude Code"
echo "  export OPENAI_API_KEY='your-key'         # OpenAI Codex"
echo ""
echo "Usage:"
echo "  claude                                    # Start Claude Code"
echo "  codex                                     # Start OpenAI Codex"
echo ""

